<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="dashboard_widget_id"
			type="hidden"
			filter="intval"
			description="JGLOBAL_FIELD_ID_DESC"/>

		<!--This field needed at all ??-->
		<field
			name="dashboard_id" 
			type="hidden"
			filter="intval"
			label="COM_TJDASHBOARD_WIDGET_FORM_LBL_DASHBOARD_ID"/>

		<field
			name="title"
			filter="string" 
			type="text"
			label="COM_TJDASHBOARD_WIDGET_FORM_LBL_TITLE"
			description="COM_TJDASHBOARD_WIDGET_FORM_DESC_TITLE"
			size="10"
			required="true" />

		<field
			name="data_plugin" 
			type="list"
			filter="intval"
			label="COM_TJDASHBOARD_WIDGET_FORM_LBL_DATA_PLUGIN"
			description="COM_TJDASHBOARD_FORM_DESC_WIDGET_DATA_PLUGIN"
			size="10" />

		<field
			name="renderer_plugin" 
			type="list"
			filter="intval"
			label="COM_TJDASHBOARD_FORM_LBL_DASHBOARD_RENDERER_PLUGIN"
			description="COM_TJDASHBOARD_FORM_DESC_DASHBOARD_RENDERER_PLUGIN"
			size="10" />

		<field
			name="size"
			type="list"
			label="COM_TJDASHBOARD_FORM_LBL_DASHBOARD_SIZE"
			description="COM_TJDASHBOARD_FORM_DESC_DASHBOARD_SIZE"
			class="inputbox"
			required="true">
				<option value=""></option>
				<option value="1">3</option>
				<option value="2">6</option>
				<option value="3">9</option>
				<option value="4">12</option>
		</field>

		<field
			name="autorefresh"
			type="list"
			label="COM_TJDASHBOARD_WIDGET_FORM_LBL_AUTOREFRESH"
			description="COM_TJDASHBOARD_WIDGET_FORM_DESC_AUTOREFRESH"
			class="inputbox"
			required="true">
				<option value=""></option>
				<option value="1">2</option>
				<option value="2">5</option>
				<option value="3">10</option>
				<option value="4">30</option>
				<option value="5">60</option>
		</field>

		<field
			name="state"
			default="1"
			type="list"
			filter="intval"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1">
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
				<option value="2">JARCHIVED</option>
				<option value="-2">JTRASHED</option>
		</field>

		<field
			name="params" 
			type="textarea"
			label="COM_TJDASHBOARD_DASHBOARD_FORM_LBL_PARAMS"
			description="COM_TJDASHBOARD_DASHBOARD_FORM_DESC_PARAMS"
			rows="10" cols="5" />

		<field
			name="ordering"
			type="hidden"
		/>

		<field
			name="created_on"
			type="hidden"
		/>

		<field
			name="created_by"
			type="hidden"
		/>

		<field
			name="modified_on"
			type="hidden"
		/>

		<field
			name="modified_by"
			type="hidden"
		/>
	</fieldset>
</form>
